                android:id="@+id/sixth_question_fourth_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sixth_question_fourth_answer" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/sixth_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
