<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/endo1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_question" />

        <RadioGroup
            android:id="@+id/first_question_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/first_question_first_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_question_first_answer" />

            <RadioButton
                android:id="@+id/first_question_second_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_question_second_answer" />

            <RadioButton
                android:id="@+id/first_question_third_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_question_third_answer" />

            <RadioButton
                android:id="@+id/first_question_fourth_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_question_fourth_answer" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/first_feedback">

            <TextView
                android:id="@+id/first_question_feedback_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/first_question_feedback_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColor" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_question" />

        <CheckBox
            android:id="@+id/second_question_first_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_question_first_answer" />

        <CheckBox
            android:id="@+id/second_question_second_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_question_second_answer" />

        <CheckBox
            android:id="@+id/second_question_third_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_question_third_answer" />

        <CheckBox
            android:id="@+id/second_question_fourth_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_question_fourth_answer" />

        <CheckBox
            android:id="@+id/second_question_fifth_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_question_fifth_answer" />

        <CheckBox
            android:id="@+id/second_question_sixth_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_question_sixth_answer" />

        <CheckBox
            android:id="@+id/second_question_seventh_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_question_seventh_answer" />

        <CheckBox
            android:id="@+id/second_question_eighth_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_question_eighth_answer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/second_feedback">

            <TextView
                android:id="@+id/second_question_feedback_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <ImageView
                android:id="@+id/second_question_feedback_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColor" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
