        <RadioGroup
            android:id="@+id/fourth_question_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/fourth_question_first_answer"
